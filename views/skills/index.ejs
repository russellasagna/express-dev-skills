<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Express To-Do</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>skills as of <%= time %></h1>
    <ul>
      <% skills.forEach(function(t) { %>
      <li>
        <form
          action="/skills/<%= t.id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>
        <a href="/skills/<%= t.id %>"><%= t.todo %></a>
        <%= t.todo %> - <%= t.done ? 'done' : 'not done' %>
      </li>
      <% }); %>
    </ul>
    <a href="/skills/new">Add A To-Do</a>
  </body>
</html>
