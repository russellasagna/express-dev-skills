<%- include('../partials/header') %>

  <body>
    <h1>Skills</h1>
    <ul>
      <% skills.forEach(function(s) { %>
        <li>
          <form
          action="/skills/<%= s.id %>?_method=DELETE"
          class="delete-form"
          method="POST"
          >
          <button type="submit">X</button>
          <a href="/skills/<%= s.id %>"><%= s.skill %></a>
            - 
          <%= s.learned ? 'Complete' : 'Incomplete' %>
        </li>
      <% }); %>
    </ul>
  </body>

  <%- include('../partials/footer') %>